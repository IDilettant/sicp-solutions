{
  "name": "sicp",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/sicp-solutions",
  "remoteUser": "vscode",
  "postCreateCommand": "clojure -Sdescribe || true",
  "settings": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "betterthantomorrow.calva",
        "stateful.runme",
        "ms-vscode.makefile-tools",
        "mhutchie.git-graph"
      ]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind"
  ]
}
